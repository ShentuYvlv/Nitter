{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "调试SSE服务器",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/sse_server.py",
            "args": [
                "--host", "127.0.0.1",
                "--port", "8000"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "调试轮询引擎",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/polling_engine.py",
            "args": [
                "--following-file", "${workspaceFolder}/config/following_list.json",
                "--nitter-instances", "http://localhost:8080"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
} 